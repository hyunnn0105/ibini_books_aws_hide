    <insert id="addFile">
        INSERT INTO prj_post_img
            (file_name, post_no, user_id, original_file_name, thumbnail)
        VALUES
            (#{fileName}, #{postNo}, #{userId}, #{originalFileName}, #{thumbnail})
    </insert>

    <select id="findFileNames" resultType="string">
        SELECT file_name
        FROM file_name
        WHERE postNo = #{postNo}
    </select>

